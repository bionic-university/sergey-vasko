<!DOCTYPE html>
<html>
    <head>
        <title>
            {% block title %}
                Job Magazine - Поиск работы
            {% endblock %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/jobmagazine/css/main.css') }}" type="text/css" media="all" />
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('bundles/jobmagazine/images/favicon.ico') }}" />
    </head>
    <body>
       <div id="container">
            <div id="header">
                <div class="content">
                    <h1><a href="{{ path('JobmagazineBundle_homepage') }}">
                        <img src="{{ asset('bundles/jobmagazine/images/logo.jpg') }}" alt="Доска вакансий" />
                    </a></h1>
 
                    <div id="sub_header">
                        <div class="post">
                            <h2>Спросить</h2>
                            <div>
                                <a href="{{ path('job_new') }}">создать вакансию</a>
                            </div>
                        </div>
 
                        <div class="search">
                            <h2>Поиск вакансий</h2>
                            <form action="" method="get">
                                <input type="text" name="keywords" id="search_keywords" />
                                <input type="submit" value="search" />
                                <div class="help">
                                    Введите поисковое слово
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
 
           <div id="content">
               {% for flashMessage in app.session.flashbag.get('notice') %}
                   <div class="flash_notice">
                       {{ flashMessage }}
                   </div>
               {% endfor %}
 
               {% for flashMessage in app.session.flashbag.get('error') %}
                   <div class="flash_error">
                       {{ flashMessage }}
                   </div>
               {% endfor %}
 
               <div class="content">
                   {% block content %}
                   {% endblock %}
               </div>
           </div>
 
           <div id="footer">
               <div class="content">
                   <span class="symfony">
                       <img src="{{ asset('bundles/jobmagazine/images/jobeet-mini.png') }}" />
                           powered by <a href="http://www.symfony.com/">
                           <img src="{{ asset('bundles/jobmagazine/images/symfony.gif') }}" alt="symfony framework" />
                       </a>
                   </span>
                   <ul>
                       <li><a href="">About Job Magazine</a></li>
                       <li class="feed"><a href="">Подписка на все</a></li>
                       <li><a href="">Job Magazine API</a></li>
                       <li><a href="">VK</a></li>
                       <li class="last"><a href="">FB</a></li>
                   </ul>
               </div>
           </div>
       </div>
   </body>
</html>